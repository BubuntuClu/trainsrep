<%= form_for([:admin, station], html: {style: "display: #{hidden ? 'none' : 'block'}" }) do |f| %>
  <%= render 'common/errors', resource: station %>
    <div class='form-group'>
      <%= f.label :title, class: 'col-sm-1 control-label' %>
      <div class="col-sm-11">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :arrival, class: 'col-sm-1 control-label' %>
      <div class="col-sm-11">
        <%= date_field("f","arrival") %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :departure , class: 'col-sm-1 control-label' %>
      <div class="col-sm-11">
        <%= date_field("f","departure") %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить') , class: 'btn btn-default btn-sm'%>
    </div>
  
<% end %>
