<tr>
  <td><%= t('ticketinfo.tr_number') %>: <%= ticket.train.number %></td>
  
  <% if current_user.admin? %>
    <td><%= link_to t('common.show'), admin_ticket_path(ticket) %></td>
    <td><%= link_to t('common.edit'), edit_admin_ticket_path(ticket) %></td>
    <td><%= link_to t('common.destroy'), admin_ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% else %>
    <td><%= link_to t('common.show'),  ticket %></td>
    <td><%= link_to t('common.destroy'), ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  
</tr>