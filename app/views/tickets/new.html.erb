<h1>Buying ticket</h1>

<form class="form-horizontal">
  <div class='form-group'>
    <div class="col-sm-2 control-label">Train number: <%= @train.number %></div>
  </div>

  <div class='form-group'>
    <div class="col-sm-2 control-label">Departure station: <%= @start_station.title %></div>
  </div>

  <div class='form-group'>
    <div class="col-sm-2 control-label">Arrival station: <%= @end_station.title %></div>
  </div>
</form>

<h1>Passenger info</h1>
<%= render 'ticpart/form', ticket: @ticket %>